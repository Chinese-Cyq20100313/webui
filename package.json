{
  "name": "@root/console",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@1.22.19",
  "license": "MIT",
  "scripts": {
    "build:types": "yakumo tsc",
    "build:client": "yakumo client",
    "build:server": "yakumo esbuild",
    "build": "yarn build:server && yarn build:types && yarn build:client",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "test": "yakumo mocha",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@koishijs/plugin-database-memory": "^1.4.1",
    "@koishijs/plugin-help": "^1.1.0",
    "@koishijs/plugin-mock": "^2.0.0",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "esbuild": "^0.14.48",
    "esbuild-register": "^3.3.3",
    "jest-mock": "^28.1.0",
    "koishi": "^4.8.1",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "^4.7.2",
    "yml-register": "^1.0.0",
    "yakumo": "^0.2.8",
    "yakumo-esbuild": "^0.2.6",
    "yakumo-mocha": "^0.2.6",
    "yakumo-publish": "^0.2.5",
    "yakumo-tsc": "^0.2.5",
    "yakumo-upgrade": "^0.2.3",
    "yakumo-version": "^0.2.5"
  },
  "yakumo": {
    "require": [
      "esbuild-register",
      "yml-register"
    ]
  }
}
